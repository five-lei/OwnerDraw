<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yilei="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_corner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yilei.ownerdraw.activity.CornerActivity">

    <com.yilei.ownerdraw.view.CornerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="30dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_blue_bright"
            android:layout_marginTop="10dp"
            yilei:layout_position="right_bottom"
            android:text="A"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_red_dark"
            android:text="B"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/holo_green_dark"
            android:text="C"/>

    </com.yilei.ownerdraw.view.CornerLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
