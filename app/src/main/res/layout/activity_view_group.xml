<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yilei.ownerdraw.activity.ViewGroupActivity">

    <Button
        android:id="@+id/btn_CornerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="CornerLayout"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_FlowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="FlowLayout"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_ScrollLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="ScrollLayout"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_BaseScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="BaseScroller"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_MultiLauncher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="MultiLauncher"
        android:textColor="@android:color/white" />

</LinearLayout>
