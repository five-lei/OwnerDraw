<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_base_scroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yilei.ownerdraw.activity.BaseScrollerActivity">

    <com.yilei.ownerdraw.view.BaseScrollerViewGroup
        android:id="@+id/scroller"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </com.yilei.ownerdraw.view.BaseScrollerViewGroup>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/scroller">
        <Button
            android:id="@+id/btn_scroll_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="scroll_to"
            />
        <Button
            android:id="@+id/btn_scroll_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="scroll_by"
            />
    </LinearLayout>

</RelativeLayout>
